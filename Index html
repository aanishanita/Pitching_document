    <script>
        const MASTER_API_KEY = "AIzaSyBTIDF601MO61d5HOqIMDY-NdKi26yDjfc";
        
        // 15 UNIQUE CODES
        const ACCESS_CODES = [
            "AELP-8X2M-90P1", "AELP-K7J2-L4M9", "AELP-3N5B-Q8R2", "AELP-V9C4-W1X6", "AELP-H2Y5-Z7A3",
            "AELP-D4E6-F8G0", "AELP-T1U3-V5W7", "AELP-S9R8-Q6P4", "AELP-M2N1-B3V5", "AELP-C4X7-Z9L1",
            "AELP-J5K8-H2G3", "AELP-F6D9-S1A4", "AELP-Q3W2-E4R5", "AELP-T7Y8-U9I0", "AELP-O1P2-L3K4"
        ];

        function handleEnter(e) { if (e.key === 'Enter') verifyCode(); }

        function verifyCode() {
            const input = document.getElementById('accessCode');
            const errorMsg = document.getElementById('loginError');
            const btn = document.getElementById('verifyBtn');
            const code = input.value.trim().toUpperCase();

            errorMsg.textContent = "";
            if (!code) { errorMsg.textContent = "Enter a code."; return; }

            btn.innerHTML = "...";
            
            setTimeout(() => {
                // 1. Validate Code exists
                if (!ACCESS_CODES.includes(code)) {
                    errorMsg.textContent = "Invalid Code.";
                    btn.innerHTML = "Unlock Generator";
                    return;
                }

                // 2. Check Local Browser Memory (Honor System Security)
                const usedCodes = JSON.parse(localStorage.getItem('aelp_used_codes') || "[]");
                if (usedCodes.includes(code)) {
                    errorMsg.textContent = "Code already used on this device.";
                    btn.innerHTML = "Unlock Generator";
                    return;
                }

                // 3. 
